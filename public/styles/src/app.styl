body, html
  margin: 0
  padding: 0

body
  background: url('/images/wood2.png')
  margin-bottom: 10px

h1, h2, h3, h4, h5, h6
  margin: 0

header
  background: #424242; /* Old browsers */
  background: -moz-linear-gradient(top, #424242 0%, #000000 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#424242), color-stop(100%,#000000)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #424242 0%,#000000 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #424242 0%,#000000 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #424242 0%,#000000 100%); /* IE10+ */
  background: linear-gradient(to bottom, #424242 0%,#000000 100%); /* W3C */
  margin-bottom: 20px
  padding: 5px 0

  h1
    color: #f3fdeb
    box-shadow: 0 1px 1px rgba(0, 0, 0, .5)
    font-size: 24px
    background: url('/images/gif-in-a-box.png') no-repeat
    width: 145px
    height: 33px
    text-indent: -999px
    overflow: hidden
    float: left

  iframe
    margin-top: 3px
    float: right

.video
  width: 450px
  margin: 0 auto 10px auto
  position: relative

video, .instructions
  width: 450px
  height: 337px
  margin-bottom: 10px

video, #gif
  border: 2px solid #B5AABA
  position: absolute
  top: 0
  left: 0

video
  display: block

.instructions
  background-color: #E8E4E3
  padding: 1em

canvas
  display: none

#gifs
  background: #fff
  padding: 20px 20px 10px 20px
  border-radius: 6px
  box-shadow: 0 0 6px rgba(0, 0, 0, .7) inset
  list-style: none

  & li:nth-child(6n)
    margin-right: 0

  li, img
    float: left

  li
    margin: 0 10px 10px 0

  img
    height: 120px
    width: 160px

#record
  background: #CAC5C5 url('/images/record.png') no-repeat center 6px
  box-shadow: -1px -1px 7px rgba(0, 0, 0, .7) inset
  border: none
  color: #000
  font-size: 26px
  height: 36px
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  -o-border-radius: 4px
  -ms-border-radius: 4px
  border-radius: 4px
  padding: 1px 0
  width: 100%
  overflow: hidden
  text-indent: -9999px

  &:active
    box-shadow: 0px 0px 7px rgba(0, 0, 0, .7) inset
    background-position: center 8px

  &.stop
    background-image: none
    text-indent: inherit

  &.uploading
    background-image: url('/images/ajax-loader.gif')
    background-position: center 8px

#gif
  width: 100%

  a
    display: block
    margin: 0 auto

  a, img
    width: 450px
    height: 337px

#recorder
  #gif
    display: none
    margin: 0 auto 10px auto

#link
  display: block
  color: #fff
  text-align: center
  font-size: 22px
  font-weight: bold
  margin-bottom: 10px
